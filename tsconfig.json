{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "outDir": "./release",
    "rootDir": ".",
    "lib": ["es2016", "dom"],
    "target": "es5",
    "skipLibCheck": true,
    "types": [
      "node",
      "jasmine"
    ]
  },
  "include": [
    "node_modules/@types/**/*.ts",
    "src/**/*.ts"
  ],
  // "exclude": [
  // 	"node_modules"
  // ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true
  }
}
