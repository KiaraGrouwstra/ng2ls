    "@angular/platform-browser": "^2.1.0",
    "@angular/platform-browser-dynamic": "^2.1.0",
    "@angular/platform-server": "^2.1.0",
    "@ngrx/router-store": "^1.1.0",
    "rxjs": "^5.0.0-beta.12"
  },
  "devDependencies": {
    "@types/jasmine": "^2.5.43",
    "@types/node": "^6.0.64",
    "@types/ramda": "github:types/npm-ramda",
