  "description": "Useful tools for Angular 2 and ngrx",
  "main": "bundles/ng2ls.umd.js",
  "module": "index.js",
  "scripts": {
    "karma": "karma start --single-run",
    "test": "npm run karma",
    "build:js": "ngc -p tsconfig.dist.json",
    "build:umd": "rollup -c rollup.config.js",
